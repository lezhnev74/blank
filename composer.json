{
  "name": "lezhnev74/blank",
  "description": "A blank project",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitriy Lezhnev",
      "email": "lezhnev.work@gmail.com"
    }
  ],
  "require": {
    "danielstjules/stringy": "^3.1",
    "monolog/monolog": "^2.0",
    "nesbot/carbon": "^2.31",
    "phlak/config": "^6.1",
    "php-di/php-di": "^6.0",
    "ramsey/uuid": "^3.9",
    "slim/psr7": "^1.0",
    "slim/slim": "^4.4",
    "vlucas/phpdotenv": "^4.1",
    "voku/arrayy": "^7.3",
    "webmozart/assert": "^1.7",
    "doctrine/dbal": "^2.10",
    "doctrine/migrations": "^2.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "mockery/mockery": "^1.3",
    "phpstan/phpstan": "^0.12.14",
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "Blank\\Shared\\": "src/Shared",
      "Blank\\Domain\\": "src/Domain",
      "Blank\\Infrastructure\\": "src/Infrastructure",
      "Blank\\Application\\": "src/Application"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "cp .env.example .env",
      "ln -s -f ../../.githooks/pre-commit .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  }
}
